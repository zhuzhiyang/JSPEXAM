<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>FilterCharset</filter-name>
  	<display-name>FilterCharset</display-name>
  	<description></description>
  	<filter-class>com.hand.filter.FilterCharset</filter-class>
  	<init-param>
  	<param-name>encoding</param-name>
  	<param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  <filter>
  	<filter-name>LoginCheck</filter-name>
  	<display-name>LoginCheck</display-name>
  	<description></description>
  	<filter-class>com.hand.filter.LoginCheck</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>FilterCharset</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>LoginCheck</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
  	<servlet-name>login</servlet-name>
  	<display-name>login</display-name>
  	<description></description>
  	<servlet-class>com.hand.Servlet.login</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>FilmServlet</servlet-name>
  	<display-name>FilmServlet</display-name>
  	<description></description>
  	<servlet-class>com.hand.Servlet.FilmServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AddFilm</servlet-name>
  	<display-name>AddFilm</display-name>
  	<description></description>
  	<servlet-class>com.hand.Servlet.AddFilm</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteFilm</servlet-name>
  	<display-name>DeleteFilm</display-name>
  	<description></description>
  	<servlet-class>com.hand.Servlet.DeleteFilm</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UpdateFilm</servlet-name>
  	<display-name>UpdateFilm</display-name>
  	<description></description>
  	<servlet-class>com.hand.Servlet.UpdateFilm</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>FilmServlet</servlet-name>
  	<url-pattern>/FilmServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AddFilm</servlet-name>
  	<url-pattern>/AddFilm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteFilm</servlet-name>
  	<url-pattern>/DeleteFilm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UpdateFilm</servlet-name>
  	<url-pattern>/UpdateFilm</url-pattern>
  </servlet-mapping>
</web-app>
